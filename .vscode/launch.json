{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Device Mapping",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_device_mapping.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Custom Component",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_component.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DYSON_DEBUG": "1"
            }
        }
    ]
}
